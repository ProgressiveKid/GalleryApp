        <Button x:Name="btnSendToServer" Content="Отправить на сервер" HorizontalAlignment="Center" Margin="0,416,0,0" VerticalAlignment="Top" Height="34" Width="173" Click="ButtonServerSend_Click"/>
        <Label Content="Название картинки" HorizontalAlignment="Left" Margin="42,138,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ImageName" HorizontalAlignment="Left" Margin="42,169,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Button Content="Получить всё" HorizontalAlignment="Left" Margin="72,386,0,0" VerticalAlignment="Top" Width="71" Click="Button_Click"/>

    </Grid>
</Window>
